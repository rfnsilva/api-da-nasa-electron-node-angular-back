{
  "compilerOptions": {
     "lib": ["es6"],
     "target": "es2017",
     "module": "commonjs",
     "allowJs": true,
     "moduleResolution": "node",
     "outDir": "./dist",                        
     "rootDir": "./src", 
     "removeComments": true,
     "esModuleInterop": true,                  
     "resolveJsonModule": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "skipLibCheck": true,                     
     "forceConsistentCasingInFileNames": true,

     "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ]
}